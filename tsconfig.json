{
  "compilerOptions": {
    "outDir": "dist",
    "target": "es5",
    "module": "commonjs",
    "lib": ["es2015", "es2016", "dom"],
    "resolveJsonModule": true,
    "sourceMap": true,
    "inlineSources": true,
    "strict": true,
    "noImplicitAny": false,
    "moduleResolution": "node",
    "suppressImplicitAnyIndexErrors": true,
    "esModuleInterop": true,
    "strictFunctionTypes": false,
    "sourceRoot": "./src",
    "typeRoots": ["./node_modules/@types", "./typings"]
  }
}
